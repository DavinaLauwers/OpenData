@typeparam TItem

<EditForm Model="@Model.Item">
    <DataAnnotationsValidator />
    <ValidationSummary />

    @FieldsTemplate(Model.Item)


    <button type="button" class="btn btn-warning" @onclick="OnCancel">Terug</button>
</EditForm>

@code {

    [Parameter]
    public RenderFragment<TItem> FieldsTemplate { get; set; }

    [Parameter]
    public ItemDetailsModel<TItem> Model { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }
}
